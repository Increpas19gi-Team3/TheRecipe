	<!-- 아이디 찾기(이메일로 찾기) -->
	<select id="selectId" parameterType="Map" resultMap="MemberResult">
		select * from TR_MEMBER
		 where m_email = #{m_email}
	</select>

	<!-- 비밀번호 찾기(아이디로 찾기) -->
	<select id="selectPw" parameterType="Map" resultMap="MemberResult">
		select * from TR_MEMBER
